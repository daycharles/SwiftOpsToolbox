<Window x:Class="SwiftOpsToolbox.Views.AddEventDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Event" Height="497" Width="459" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Background="White">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,8">
            <TextBlock Text="Add New Event" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center" />
            <Button x:Name="BtnClose" Width="28" Height="28" DockPanel.Dock="Right" ToolTip="Close" Background="Transparent" BorderBrush="Transparent">
                <TextBlock Text="✕" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center" />
            </Button>
        </DockPanel>

        <Border Grid.Row="1" BorderBrush="#E6E6E6" BorderThickness="0,0,0,1" />

        <!-- Title -->
        <StackPanel Grid.Row="2" Margin="0,12,0,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Title:" FontWeight="SemiBold" />
                <TextBlock Text="*" Foreground="#d9534f" Margin="6,0,0,0" />
            </StackPanel>
            <TextBox x:Name="TxtTitle" Height="28" />
        </StackPanel>

        <!-- Description -->
        <StackPanel Grid.Row="3" Margin="0,12,0,0">
            <TextBlock Text="Description:" FontWeight="SemiBold" />
            <TextBox x:Name="TxtDescription" Height="72" TextWrapping="Wrap" AcceptsReturn="True" />
        </StackPanel>

        <!-- Start / End Date &amp; Time -->
        <StackPanel Grid.Row="4" Margin="0,12,0,0">
            <StackPanel>
                <TextBlock Text="Start Date &amp; Time:" FontWeight="SemiBold" />
                <DockPanel Margin="0,6,0,0">
                    <DatePicker x:Name="DpStart" Width="220" />
                    <TextBox x:Name="TxtStartTime" Width="120" Margin="8,0,0,0" VerticalContentAlignment="Center" />
                    <CheckBox x:Name="ChkAllDay" Content="All day" Margin="8,0,0,0" VerticalAlignment="Center" />
                </DockPanel>
            </StackPanel>

            <StackPanel Margin="0,8,0,0">
                <TextBlock Text="End Date &amp; Time:" FontWeight="SemiBold" />
                <DockPanel Margin="0,6,0,0" Width="445">
                    <DatePicker x:Name="DpEnd" Width="220" HorizontalAlignment="Left" />
                    <TextBox x:Name="TxtEndTime" VerticalContentAlignment="Center" RenderTransformOrigin="0.006,0.455" Width="123" HorizontalAlignment="Left" Margin="8,0,0,0" />
                </DockPanel>
            </StackPanel>
        </StackPanel>

        <!-- Color picker -->
        <StackPanel Grid.Row="5" Margin="0,12,0,0">
            <TextBlock Text="Color:" FontWeight="SemiBold" />
            <Grid Margin="0,6,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="170" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <ComboBox x:Name="CbColor" Width="160" Grid.Column="0">
                    <ComboBoxItem Content="Green" Tag="#28a745" />
                    <ComboBoxItem Content="Blue" Tag="#3788d8" />
                    <ComboBoxItem Content="Red" Tag="#dc3545" />
                    <ComboBoxItem Content="Orange" Tag="#ff9800" />
                    <ComboBoxItem Content="Purple" Tag="#6f42c1" />
                </ComboBox>
                <Border x:Name="ColorPreview" Grid.Column="1" Height="20" Background="#28a745" CornerRadius="4" HorizontalAlignment="Stretch" Margin="12,0,0,0" />
            </Grid>
        </StackPanel>

        <!-- Footer actions -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="BtnCancel" Width="90" Height="34" Margin="6" Background="Transparent" BorderBrush="#e6e6e6">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="✕" Foreground="#e04646" FontSize="16" Margin="0,0,8,0" />
                    <TextBlock Text="Cancel" VerticalAlignment="Center" />
                </StackPanel>
            </Button>
            <Button x:Name="BtnSave" Width="90" Height="34" Margin="6" Background="#e8f5ff" BorderBrush="#cde6ff">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="💾" FontSize="16" Margin="0,0,8,0" />
                    <TextBlock Text="Save" VerticalAlignment="Center" />
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>