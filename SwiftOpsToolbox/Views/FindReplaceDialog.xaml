<Window x:Class="SwiftOpsToolbox.Views.FindReplaceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Find and Replace" Height="240" Width="450"
        WindowStartupLocation="CenterOwner"
        Background="#1A1A1A"
        ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Find what -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
            <TextBlock Text="Find what:" Foreground="White" Width="100" VerticalAlignment="Center" />
            <TextBox x:Name="TxtFind" Width="320" Height="28" Foreground="White" Background="#202020" BorderBrush="#333" />
        </StackPanel>

        <!-- Replace with -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,12">
            <TextBlock Text="Replace with:" Foreground="White" Width="100" VerticalAlignment="Center" />
            <TextBox x:Name="TxtReplace" Width="320" Height="28" Foreground="White" Background="#202020" BorderBrush="#333" />
        </StackPanel>

        <!-- Options -->
        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,0,0,12">
            <CheckBox x:Name="ChkMatchCase" Content="Match case" Foreground="White" Margin="100,0,0,6" />
            <CheckBox x:Name="ChkWholeWord" Content="Match whole word only" Foreground="White" Margin="100,0,0,0" />
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="BtnFindNext" Content="Find Next" Width="90" Height="32" Margin="0,0,8,0" 
                    Foreground="White" Background="#0B2A44" BorderBrush="#333" Click="BtnFindNext_Click" />
            <Button x:Name="BtnReplace" Content="Replace" Width="90" Height="32" Margin="0,0,8,0" 
                    Foreground="White" Background="#0B2A44" BorderBrush="#333" Click="BtnReplace_Click" />
            <Button x:Name="BtnReplaceAll" Content="Replace All" Width="90" Height="32" Margin="0,0,8,0" 
                    Foreground="White" Background="#0B2A44" BorderBrush="#333" Click="BtnReplaceAll_Click" />
            <Button x:Name="BtnClose" Content="Close" Width="90" Height="32" 
                    Foreground="White" Background="Transparent" BorderBrush="#333" Click="BtnClose_Click" />
        </StackPanel>
    </Grid>
</Window>
