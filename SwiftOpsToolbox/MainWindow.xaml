<?xml version="1.0" encoding="UTF-8" ?>
<mah:MetroWindow x:Class="SwiftOpsToolbox.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:local="clr-namespace:SwiftOpsToolbox"
                 xmlns:views="clr-namespace:SwiftOpsToolbox.Views"
                 mc:Ignorable="d"
                 Title="SwiftOps Toolbox"
                 Height="600"
                 Width="900"
                 WindowStartupLocation="Manual"
                 Background="#0F0F10">
    <Window.Resources>
        <!-- Dark theme resources -->
        <SolidColorBrush x:Key="SurfaceBrush"
                         Color="#0F0F10" />
        <SolidColorBrush x:Key="PanelBrush"
                         Color="#161616" />
        <SolidColorBrush x:Key="AccentBrush"
                         Color="#007BFF" />
        <SolidColorBrush x:Key="MutedText"
                         Color="#A6A6A6" />
        <!-- Added missing brushes used throughout the XAML -->
        <SolidColorBrush x:Key="DarkGray" Color="#333333" />
        <SolidColorBrush x:Key="ElectricBlue" Color="#007BFF" />
        <SolidColorBrush x:Key="VibrantOrange" Color="#FF6F00" />
        <SolidColorBrush x:Key="LightGray" Color="#F5F5F5" />
        <SolidColorBrush x:Key="White" Color="#FFFFFF" />

        <!-- Sidebar gradient -->
        <LinearGradientBrush x:Key="SidebarGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#0D2A66" Offset="0"/>
            <GradientStop Color="#2B0E58" Offset="1"/>
        </LinearGradientBrush>

        <!-- Converters -->
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />

        <!-- Sidebar button base style -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="6" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="6">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Simple card style (dark) -->
        <Style x:Key="CardStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="#141416" />
            <Setter Property="CornerRadius"
                    Value="8" />
            <Setter Property="Padding"
                    Value="12" />
            <Setter Property="BorderBrush"
                    Value="#222" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="SnapsToDevicePixels"
                    Value="True" />
        </Style>

        <!-- Planner card style on white background -->
        <Style x:Key="PlannerCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="BorderBrush" Value="#E6E6E6" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <!-- Calendar small/Planner day button style -->
        <!-- Style calendar day buttons to show day number top-left and a blue selected indicator -->
        <Style TargetType="CalendarDayButton" x:Key="PlannerDayButtonStyle">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="6" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="VerticalContentAlignment" Value="Top" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CalendarDayButton">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <!-- day number -->
                                <TextBlock x:Name="DayText"
                                           Text="{TemplateBinding Content}"
                                           FontSize="13"
                                           Foreground="{TemplateBinding Foreground}"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top" />
                                <!-- selected indicator circle top-right -->
                                <Ellipse x:Name="SelCircle"
                                         Width="28"
                                         Height="28"
                                         Fill="#2B9AF3"
                                         HorizontalAlignment="Right"
                                         VerticalAlignment="Top"
                                         Margin="0,4,4,0"
                                         Opacity="0" />
                                <TextBlock x:Name="SelText"
                                           Text="{TemplateBinding Content}"
                                           FontSize="13"
                                           Foreground="White"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Top"
                                           Margin="0,8,12,0"
                                           Opacity="0" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="SelCircle" Property="Opacity" Value="1" />
                                <Setter TargetName="SelText" Property="Opacity" Value="1" />
                                <Setter TargetName="Bd" Property="Background" Value="#eaf6ff" />
                            </Trigger>
                            <Trigger Property="IsInactive" Value="True">
                                <Setter Property="Foreground" Value="#9aa0a6" />
                            </Trigger>
                            <Trigger Property="IsToday" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#3788d8" />
                                <Setter TargetName="Bd" Property="BorderThickness" Value="0,0,0,0" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Calendar item style to improve header and weekday labels -->
        <Style TargetType="CalendarItem" x:Key="PlannerCalendarItemStyle">
            <Setter Property="Margin" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CalendarItem">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <!-- Day titles -->
                            <Grid x:Name="PART_Header" Grid.Row="0" Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Border Grid.ColumnSpan="7" Background="#f7f9fb" CornerRadius="4" Padding="8"/>
                                <TextBlock Grid.Column="0" Text="Sunday" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4" />
                                <TextBlock Grid.Column="1" Text="Monday" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4" />
                                <TextBlock Grid.Column="2" Text="Tuesday" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4" />
                                <TextBlock Grid.Column="3" Text="Wednesday" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4" />
                                <TextBlock Grid.Column="4" Text="Thursday" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4" />
                                <TextBlock Grid.Column="5" Text="Friday" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4" />
                                <TextBlock Grid.Column="6" Text="Saturday" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4" />
                            </Grid>

                            <!-- Calendar grid (use the default PART_Root) -->
                            <Grid x:Name="PART_Root" Grid.Row="1">
                                <CalendarDayButton x:Name="Dummy" Visibility="Collapsed" />
                                <CalendarButton x:Name="PrevButton" Visibility="Collapsed" />
                                <CalendarButton x:Name="NextButton" Visibility="Collapsed" />
                                <CalendarButton x:Name="HeaderButton" Visibility="Collapsed" />
                                <CalendarDayButton x:Name="DayButton" Visibility="Collapsed" />
                            </Grid>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Apply planner day button and item styles to calendars inside this window by default -->
        <Style TargetType="Calendar" x:Key="PlannerSmallCalendarStyle">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="#222" />
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="BorderBrush" Value="#EEEEEE" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Calendar">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="0">
                            <CalendarItem x:Name="PART_CalendarItem" Style="{StaticResource PlannerCalendarItemStyle}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

<!-- ...rest of Window.Resources... -->
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!-- Vertical left nav (styled) -->
        <DockPanel Grid.Column="0"
                   Background="{StaticResource SidebarGradient}">
            <StackPanel VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        Margin="12">
                <TextBlock Text="SwiftOpsToolbox"
                           Foreground="White"
                           FontWeight="SemiBold"
                           Margin="6,4"
                           FontSize="14" />

                <StackPanel Margin="0,12,0,0">
                    <Button x:Name="BtnTasks"
                            Click="BtnTasks_Click"
                            Style="{StaticResource SidebarButtonStyle}"
                            Width="120"
                            Height="44"
                            Margin="0,4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="16" Text="🏠" Margin="8,0" />
                            <TextBlock Text="Home" VerticalAlignment="Center" Margin="10,0" />
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnCalendar"
                            Click="BtnCalendar_Click"
                            Width="120"
                            Height="44"
                            Margin="0,4"
                            ToolTip="Calendar"
                            Visibility="{Binding CalendarVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DataContext.CalendarVisible, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                        <Setter Property="Background" Value="#1B3F8A" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="16" Text="📅" Margin="8,0" />
                            <TextBlock Text="Calendar" VerticalAlignment="Center" Margin="10,0" />
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnClipboard"
                            Click="BtnClipboard_Click"
                            Width="120"
                            Height="44"
                            Margin="0,4"
                            Visibility="{Binding ClipboardVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DataContext.ClipboardVisible, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                        <Setter Property="Background" Value="#1B3F8A" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="16" Text="📋" Margin="8,0" />
                            <TextBlock Text="Clipboard" VerticalAlignment="Center" Margin="10,0" />
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnNotepad"
                            Click="BtnNotepad_Click"
                            Width="120"
                            Height="44"
                            Margin="0,4"
                            Visibility="{Binding NotepadVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DataContext.NotepadVisible, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                        <Setter Property="Background" Value="#1B3F8A" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="16" Text="📝" Margin="8,0" />
                            <TextBlock Text="Notepad" VerticalAlignment="Center" Margin="10,0" />
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnSearch"
                            Click="BtnSearch_Click"
                            Width="120"
                            Height="44"
                            Margin="0,4"
                            Visibility="{Binding FileSearchVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DataContext.FileSearchVisible, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                        <Setter Property="Background" Value="#1B3F8A" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="16" Text="🔎" Margin="8,0" />
                            <TextBlock Text="Search" VerticalAlignment="Center" Margin="10,0" />
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnSettings"
                            Click="BtnSettings_Click"
                            Width="120"
                            Height="44"
                            Margin="0,14,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="16" Text="⚙️" Margin="8,0" />
                            <TextBlock Text="Settings" VerticalAlignment="Center" Margin="10,0" />
                        </StackPanel>
                    </Button>
                </StackPanel>

            </StackPanel>
        </DockPanel>

        <!-- Main area -->
        <Grid Grid.Column="1"
              Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Top bar (kept minimal) -->
            <Grid Grid.Row="0" Height="48">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="200" />
                </Grid.ColumnDefinitions>
            </Grid>

            <!-- Content split -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="LeftColumn" Width="3*" />
                    <ColumnDefinition x:Name="RightColumn" Width="2*" />
                </Grid.ColumnDefinitions>

                <!-- Left area root: holds mode panels -->
                <Grid Grid.Column="0">
                    <!-- Home panel -->
                    <Grid x:Name="HomePanel" Visibility="Visible">
                        <Border Style="{StaticResource CardStyle}">
                            <!-- ...existing home content unchanged... -->
                            <StackPanel>
                                <TextBlock Text="Welcome to SwiftOps Toolbox"
                                           Foreground="White"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,8" />
                                <TextBlock Text="Quick overview"
                                           Foreground="{StaticResource MutedText}"
                                           Margin="0,0,0,12" />
                                <!-- Status / summary for toolbox -->
                                <Border Background="#0F0F10"
                                        BorderBrush="#222"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="10"
                                        Margin="0,0,0,12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="200" />
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Text="Current status"
                                                       Foreground="White"
                                                       FontSize="14"
                                                       FontWeight="SemiBold" />
                                            <StackPanel Orientation="Horizontal"
                                                        Margin="0,6,0,0">
                                                <TextBlock Text="Time: "
                                                           Foreground="{StaticResource MutedText}"
                                                           Width="80" />
                                                <TextBlock Text="{Binding CurrentTime}"
                                                           Foreground="White" />
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal"
                                                        Margin="0,6,0,0">
                                                <TextBlock Text="Weather: "
                                                           Foreground="{StaticResource MutedText}"
                                                           Width="80" />
                                                <TextBlock Text="{Binding WeatherText}"
                                                           Foreground="White" />
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal"
                                                        Margin="0,6,0,0">
                                                <TextBlock Text="Machine: "
                                                           Foreground="{StaticResource MutedText}"
                                                           Width="80" />
                                                <TextBlock Text="{Binding MachineName}"
                                                           Foreground="White" />
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal"
                                                        Margin="0,6,0,0">
                                                <TextBlock Text="OS: "
                                                           Foreground="{StaticResource MutedText}"
                                                           Width="80" />
                                                <TextBlock Text="{Binding OSDescription}"
                                                           Foreground="White"
                                                           TextTrimming="CharacterEllipsis"
                                                           Width="300" />
                                            </StackPanel>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Top">
                                            <TextBlock Text="App"
                                                       Foreground="White"
                                                       FontWeight="SemiBold" />
                                            <StackPanel Orientation="Horizontal"
                                                        Margin="0,6,0,0">
                                                <TextBlock Text="Memory:"
                                                           Foreground="{StaticResource MutedText}"
                                                           Width="80" />
                                                <TextBlock Text="{Binding AppMemoryMb, StringFormat={}{0} MB}"
                                                           Foreground="White" />
                                            </StackPanel>
                                            <Button Width="160"
                                                    Height="50"
                                                    Margin="0,8,0,0"
                                                    Command="{Binding RefreshWeatherCommand}"
                                                    Background="{StaticResource ElectricBlue}"
                                                    Foreground="White"
                                                    BorderThickness="0">
                                                <StackPanel Orientation="Vertical"
                                                            HorizontalAlignment="Center">
                                                    <TextBlock FontFamily="Segoe MDL2 Assets"
                                                               Text="?"
                                                               FontSize="16"
                                                               Foreground="White"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center" />
                                                    <TextBlock Text="Refresh Weather"
                                                               Foreground="White"
                                                               Opacity="0.95"
                                                               FontSize="10"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,3,0,0" />
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                                <StackPanel Orientation="Horizontal"
                                            Margin="0,0,0,12">
                                    <Border Background="#0F0F10"
                                            Padding="8"
                                            CornerRadius="6"
                                            Margin="0,0,8,0">
                                        <StackPanel>
                                            <TextBlock Text="Upcoming"
                                                       Foreground="{StaticResource MutedText}" />
                                            <TextBlock Text="{Binding UpcomingEvents.Count}"
                                                       Foreground="White"
                                                       FontSize="16"
                                                       FontWeight="Bold" />
                                        </StackPanel>
                                    </Border>
                                    <Border Background="#0F0F10"
                                            Padding="8"
                                            CornerRadius="6"
                                            Margin="0,0,8,0">
                                        <StackPanel>
                                            <TextBlock Text="Todos"
                                                       Foreground="{StaticResource MutedText}" />
                                            <TextBlock Text="{Binding ToDoItems.Count}"
                                                       Foreground="White"
                                                       FontSize="16"
                                                       FontWeight="Bold" />
                                        </StackPanel>
                                    </Border>
                                    <Border Background="#0F0F10"
                                            Padding="8"
                                            CornerRadius="6">
                                        <StackPanel>
                                            <TextBlock Text="Events"
                                                       Foreground="{StaticResource MutedText}" />
                                            <TextBlock Text="{Binding CalendarEvents.Count}"
                                                       Foreground="White"
                                                       FontSize="16"
                                                       FontWeight="Bold" />
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                                <TextBlock Text="Next events"
                                           Foreground="White"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,6" />
                                <ListBox ItemsSource="{Binding UpcomingEvents}"
                                         Background="Transparent"
                                         BorderThickness="0">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="8"
                                                    Margin="4"
                                                    Background="#0F0F10"
                                                    CornerRadius="6"
                                                    BorderBrush="#222"
                                                    BorderThickness="1">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Date, StringFormat=d}"
                                                               Foreground="{StaticResource MutedText}"
                                                               FontSize="12" />
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Time}"
                                                                   Foreground="White"
                                                                   FontSize="13"
                                                                   FontWeight="SemiBold" />
                                                        <TextBlock Text=" - "
                                                                   Foreground="White"
                                                                   FontSize="13"
                                                                   FontWeight="SemiBold" />
                                                        <TextBlock Text="{Binding Title}"
                                                                   Foreground="White"
                                                                   FontSize="13"
                                                                   FontWeight="SemiBold" />
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding Description}"
                                                               Foreground="{StaticResource MutedText}"
                                                               FontSize="12" />
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Calendar mode (modern planner card) -->
                    <Grid x:Name="CalendarModePanel" Visibility="Collapsed">
                        <Border Style="{StaticResource PlannerCardStyle}" Padding="16">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!-- Header -->
                                <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="📅" FontSize="18" Margin="0,0,8,0" />
                                    <TextBlock Text="Monthly Planner" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center" />
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="12,0,0,0">
                                        <!-- spacer -->
                                    </StackPanel>
                                </StackPanel>

                                <!-- Toolbar -->
                                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,12">
                                    <Button x:Name="BtnPrevMonth" Width="80" Height="34" Margin="4"> 
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="◀" Margin="0,0,6,0" />
                                            <TextBlock Text="Previous" />
                                        </StackPanel>
                                    </Button>
                                    <Button x:Name="BtnNextMonth" Width="80" Height="34" Margin="4"> 
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="Next" />
                                            <TextBlock Text="▶" Margin="6,0,0,0" />
                                        </StackPanel>
                                    </Button>
                                    <Button x:Name="BtnAddEventHeader" Width="90" Height="34" Margin="4" Background="#E8F5FF" BorderBrush="#CDE6FF">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="＋" Margin="0,0,6,0" />
                                            <TextBlock Text="Add Event" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>

                                <!-- Calendar area: replace with MonthGridView -->
                                <Border Grid.Row="2" Background="#FFFFFF" CornerRadius="6" Padding="12" BorderBrush="#ECECEC" BorderThickness="1">
                                    <views:MonthGridView x:Name="MonthGrid" />
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Tasks/Clipboard/Notepad/Search Panels unchanged (kept as before) -->
                    <Border x:Name="TasksModePanel" Visibility="Collapsed" Style="{StaticResource CardStyle}">
                        <!-- existing content -->
                    </Border>

                    <Border x:Name="ClipboardModePanel" Visibility="Collapsed" Style="{StaticResource CardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,8">
                                <Button Width="100" Height="50" Command="{Binding ClearClipboardCommand}" Background="{StaticResource VibrantOrange}" Foreground="White" BorderThickness="0">
                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="?" FontSize="16" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        <TextBlock Text="Clear All" Foreground="White" Opacity="0.95" FontSize="10" HorizontalAlignment="Center" Margin="0,3,0,0" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                            <ListBox Grid.Row="1" ItemsSource="{Binding ClipboardItems}" Background="Transparent" BorderThickness="0" x:Name="ClipboardList" MouseDoubleClick="ClipboardList_MouseDoubleClick">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="10" Margin="6" Background="#0F0F10" CornerRadius="6" BorderBrush="#222" BorderThickness="1">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Text}" Foreground="White" FontSize="14" TextWrapping="Wrap" />
                                                    <TextBlock Text="{Binding Timestamp}" Foreground="{StaticResource MutedText}" FontSize="12" />
                                                </StackPanel>
                                                <Button Grid.Column="1" Width="28" Height="28" Margin="8,0,0,0" ToolTip="Delete clip" Command="{Binding DataContext.RemoveClipboardItemCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}">
                                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="?" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                </Button>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>

                    <Border x:Name="NotepadModePanel" Visibility="Collapsed" Style="{StaticResource CardStyle}">
                        <views:NotepadView />
                    </Border>

                    <Border x:Name="SearchModePanel" Visibility="Collapsed" Style="{StaticResource CardStyle}">
                        <views:FileSearchView />
                    </Border>

                    <!-- Settings panel unchanged -->
                    <Grid x:Name="SettingsModePanel" Visibility="Collapsed">
                        <!-- existing settings content -->
                    </Grid>
                </Grid>

                <!-- Right card (agenda) - always visible -->
                <Border x:Name="RightCardBorder" Grid.Column="1" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock Text="Agenda" Foreground="White" FontSize="16" FontWeight="SemiBold" />
                        <!-- Add todo input in agenda -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,12">
                            <TextBox Width="200" Height="30" Text="{Binding NewTodoText, UpdateSourceTrigger=PropertyChanged}" mah:TextBoxHelper.Watermark="Add a custom todo..." />
                            <Button Width="80" Height="50" Margin="8,0,0,0" Command="{Binding AddTodoCommand}" Background="{StaticResource ElectricBlue}" Foreground="White" BorderThickness="0">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="?" FontSize="16" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    <TextBlock Text="Add" Foreground="White" Opacity="0.95" FontSize="10" HorizontalAlignment="Center" Margin="0,3,0,0" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        <StackPanel Grid.Row="2" VerticalAlignment="Top">
                            <TextBlock Text="Today's items" Foreground="{StaticResource MutedText}" Margin="0,0,0,8" />
                            <ListBox ItemsSource="{Binding ToDoItems}" Background="Transparent" BorderThickness="0">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="8" Margin="4" Background="#0F0F10" CornerRadius="6" BorderBrush="#222" BorderThickness="1">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Text}" Foreground="White" FontSize="13" />
                                                    <TextBlock Text="{Binding Timestamp}" Foreground="{StaticResource MutedText}" FontSize="11" />
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Grid>
                </Border>

            </Grid>

            <Image Source="/SwiftOpsToolboxLogo.png" Width="509" Height="101" HorizontalAlignment="Left" Margin="2,0,0,0" VerticalAlignment="Center" />
        </Grid>
    </Grid>
</mah:MetroWindow>